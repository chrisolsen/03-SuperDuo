<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>

    <style name="NavigationBarIcon">
        <item name="android:textColor">@color/navigation_drawer_font_color</item>
        <item name="android:alpha">0.3</item>
    </style>

    <style name="NavigationBarText">
        <item name="android:textSize">@dimen/navigation_drawer_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/navigation_drawer_font_color</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="AppTheme.BookTitle">
        <item name="android:background">@color/book_title_background</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/ToolbarText</item>
    </style>

    <style name="ToolbarText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <color name="book_title_background">#99000000</color>
</resources>
